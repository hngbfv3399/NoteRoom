rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // 기본 함수들
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 강화된 이미지 타입 검증
    function isValidImageType() {
      return request.resource.contentType in [
        'image/jpeg', 
        'image/jpg', 
        'image/png', 
        'image/gif', 
        'image/webp'
      ];
    }

    // 파일 크기 검증 (5MB 제한)
    function isValidFileSize() {
      return request.resource.size <= 5 * 1024 * 1024;
    }

    // 파일명 보안 검증
    function hasValidFileName() {
      return !resource.name.matches('.*[<>:"/\\|?*].*') && // 특수문자 제한
             !resource.name.matches('.*\\.\\..*') && // 경로 순회 방지
             resource.name.size() <= 255 && // 파일명 길이 제한
             resource.name.size() > 0; // 빈 파일명 방지
    }

    // 메타데이터 검증 - 2025.05.27 업데이트
    function hasValidMetadata() {
      return request.resource.metadata == null || 
             request.resource.metadata.size() <= 15; // 메타데이터 개수만 제한
    }

    // 관리자 권한 확인 (필요시)
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // 노트 썸네일 이미지 규칙 (메인 썸네일) - 보안 강화
    match /notes/{userId}/{imageId} {
      // 읽기는 모든 사용자에게 허용 (공개 콘텐츠)
      allow read: if true;
      
      // 쓰기는 파일 소유자만 가능하며, 기본 검증 적용
      allow create: if isOwner(userId)
        && isValidImageType()
        && isValidFileSize();
      
      allow update, delete: if isOwner(userId);
    }

    // 노트 컨텐츠 이미지 규칙 (에디터 내 이미지) - 새로운 경로
    match /notes/content/{userId}/{imageId} {
      // 읽기는 모든 사용자에게 허용 (공개 콘텐츠)
      allow read: if true;
      
      // 쓰기는 파일 소유자만 가능하며, 강화된 검증 적용
      allow create: if isOwner(userId)
        && isValidImageType()
        && isValidFileSize()
        && hasValidFileName()
        && hasValidMetadata();
      
      allow update, delete: if isOwner(userId);
    }

    // 노트 컨텐츠 이미지 규칙 (에디터 내 이미지) - 기존 경로 (보안 강화) - 2025.05.27 업데이트
    match /noteImages/{imageId} {
      // 읽기는 모든 사용자에게 허용 (공개 콘텐츠)
      allow read: if true;
      
      // 쓰기는 인증된 사용자만 가능하며, 강화된 검증 적용
      allow create: if isAuthenticated()
        && isValidImageType()
        && isValidFileSize()
        && hasValidFileName()
        && hasValidMetadata();
      
      // 수정/삭제는 인증된 사용자만 가능 (권한 완화)
      allow update, delete: if isAuthenticated();
    }

    // 프로필 이미지 규칙
    match /profiles/{userId}/{imageId} {
      // 읽기는 모든 사용자에게 허용 (프로필은 공개)
      allow read: if true;
      
      // 쓰기는 파일 소유자만 가능하며, 강화된 검증 적용
      allow create: if isOwner(userId)
        && isValidImageType()
        && isValidFileSize()
        && hasValidFileName()
        && hasValidMetadata();
      
      allow update, delete: if isOwner(userId);
    }

    // 임시 업로드 경로 (필요시)
    match /temp/{userId}/{imageId} {
      // 읽기는 파일 소유자만 가능
      allow read: if isOwner(userId);
      
      // 임시 파일 업로드 (1시간 후 자동 삭제 권장)
      allow create: if isOwner(userId)
        && isValidImageType()
        && isValidFileSize()
        && hasValidFileName()
        && hasValidMetadata();
      
      allow delete: if isOwner(userId);
    }

    // 기타 모든 경로는 기본적으로 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
